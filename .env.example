ALERT_EMAIL=alerts@example.com

# Database
DATABASE_URL=sqlite:///base_de_datos/military_monitoring.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/satellite_monitor.log

# Processing
MAX_WORKERS=4
BATCH_SIZE=10
